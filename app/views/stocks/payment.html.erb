<div class="pt-14 bg-dark text-white vh-100 ">
    <div class="container flex justify-content-center align-items-center h-100">          
        <div class="flex flex-col justify-content-center align-items-center my-8 w-96 h-96 border border-white rounded-2xl" >  
            <h2 class="h5 align-start pb-10">Current balance: <strong><%= current_user.balance.round(2)%></strong></h2>    
            <%= form_with url: cash_in_path do |f| %>
                <div class="form-field mb-3">
                    <%= f.number_field :amount, placeholder:"Enter amount", autofocus: true, class:"form-control" %>
                </div>

                <div class="actions">
                    <%= f.submit 'Add fund',class:"mb-3 btn bg-yellow-400 w-full"%>
                </div>
            <% end %>
        </div>
        
    </div>
</div>

